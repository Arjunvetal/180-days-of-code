@model LoginRegister.Models.User

@{
    ViewBag.Title = "Index";
}

<h2>Home Page</h2>

<h3>Welcome @Session["Username"]</h3>

<h5>Full Name : @Session["FullName"]</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Logout" class="btn btn-default" />
        </div>
    </div>
</div>
}
        <p>

            @Html.ActionLink("Update Profile", "Edit", new { Username = @Session["Username"] })
        </p>

